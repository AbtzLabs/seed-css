        br 
        
        h5 Examples
        
        .grid
          .row
            .col.sm-12
            
              .field
                label(for="") This is a simple input text 
                input(type="text")
            
              .field
                label(for="") This is a simple input password 
                input(type="password")
            
              .field
                label(for="") This is a simple input email 
                input(type="email", placeholder="name@domain.tld")
            
              .field.seed-select
                label(for="") This is a select/ dropdown 
                select
                  option(value="A") Option A
                  option(value="B") Option B
                  option(value="C") Option C
                  
              .field
                input(type="radio", id="radio-sample")
                label(for="radio-sample") This is a radio button
                  
              .field
                input(type="checkbox", id="check-sample")
                label(for="check-sample") This is a checkbox
                  
              .field
                label(for="") This is a simple textarea 
                textarea
                
                
        .code-sample
          pre.prettyprint.lang-html.
            &lt;!-- Example of an input text --&gt; 
            &lt;div class="field" &gt; 
              &lt;label for="..." &gt; ... &lt;/label&gt;
              &lt;input type="text" name="..." &gt;
            &lt;/div&gt;    
                 
            &lt;!-- Example of an input password --&gt; 
            &lt;div class="field" &gt; 
              &lt;label for="..." &gt; ... &lt;/label&gt;
